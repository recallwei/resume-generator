{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "globals": {},
  "extends": [
    "plugin:vue/vue3-recommended",
    "eslint:recommended",
    "@vue/eslint-config-typescript",
    "@vue/eslint-config-prettier",
    "airbnb-base"
  ],
  "plugins": ["@rushstack/eslint-patch/modern-module-resolution"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "prettier/prettier": "error",
    "quotes": "off"
  }
}
